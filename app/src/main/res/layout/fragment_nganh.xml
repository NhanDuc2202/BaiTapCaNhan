<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECEFF1"
    tools:context=".fragment.Nganh">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/it"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="133dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/jaldi"
                android:text="Công nghệ thông tin"
                android:textColor="#000000"
                android:textSize="28sp"
                tools:layout_editor_absoluteX="238dp"
                tools:layout_editor_absoluteY="190dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jaldi"
                    android:text="Khoa phụ trách:"
                    android:textColor="#575454"
                    android:textSize="18dp"
                    android:layout_marginEnd="10dp"
                    tools:layout_editor_absoluteX="243dp"
                    tools:layout_editor_absoluteY="225dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jaldi"
                    android:text="Công nghệ số"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    tools:layout_editor_absoluteX="243dp"
                    tools:layout_editor_absoluteY="225dp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jaldi"
                android:text="Mã ngành: 7480201"
                android:textColor="#575454"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="243dp"
                tools:layout_editor_absoluteY="225dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/boPhanDT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingStart="30dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jaldi"
            android:text="Bậc đào tạo:"
            android:textColor="#000000"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="243dp"
            tools:layout_editor_absoluteY="225dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jaldi"
            android:layout_marginStart="30dp"
            android:text="Đại học"
            android:textColor="#000000"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="243dp"
            tools:layout_editor_absoluteY="225dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:id="@+id/heDT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingStart="30dp"
        app:layout_constraintTop_toBottomOf="@+id/boPhanDT">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jaldi"
            android:text="Hệ đào tạo:"
            android:textColor="#000000"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="243dp"
            tools:layout_editor_absoluteY="225dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jaldi"
            android:layout_marginStart="30dp"
            android:text="Chính quy"
            android:textColor="#000000"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="243dp"
            tools:layout_editor_absoluteY="225dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:id="@+id/CTDT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingStart="30dp"
        app:layout_constraintTop_toBottomOf="@+id/heDT">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jaldi"
            android:text="Chương trình đào tạo: "
            android:textColor="#000000"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="243dp"
            tools:layout_editor_absoluteY="225dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jaldi"
            android:layout_marginStart="10dp"
            android:text="Chương trình Tiêu chuẩn"
            android:textColor="#000000"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="243dp"
            tools:layout_editor_absoluteY="225dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:id="@+id/nienKhoa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingStart="30dp"
        app:layout_constraintTop_toBottomOf="@+id/CTDT">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jaldi"
            android:text="Niên khóa:"
            android:textColor="#000000"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="243dp"
            tools:layout_editor_absoluteY="225dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jaldi"
            android:layout_marginStart="30dp"
            android:text="2022-2026"
            android:textColor="#000000"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="243dp"
            tools:layout_editor_absoluteY="225dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:id="@+id/soTCYC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingStart="30dp"
        app:layout_constraintTop_toBottomOf="@+id/nienKhoa">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jaldi"
            android:text="Số tín chỉ yêu cầu:"
            android:textColor="#000000"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="243dp"
            tools:layout_editor_absoluteY="225dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jaldi"
            android:layout_marginStart="30dp"
            android:text="135"
            android:textColor="#000000"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="243dp"
            tools:layout_editor_absoluteY="225dp" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>